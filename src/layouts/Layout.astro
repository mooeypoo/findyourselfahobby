---
export interface Props {
	title: string;
}

const { title } = Astro.props;
const canonicalURL = new URL(Astro.url);
canonicalURL.search = '';

const socialImageURL = new URL('/minibridgebuilding-350x350.jpg', Astro.url);
const favicoURL = new URL('/favicon.ico', Astro.url);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="description" content="A free tool to help you find a new hobby to engage in.">
		<meta name="author" content="The Internet">
		<!-- favicon -->
		<link rel="shortcut icon" href={favicoURL}>
		<!-- Open graph -->
		<meta property="og:title" content="Find yourself a hobby!" />
		<meta property="og:type" content="website" />
		<meta property="og:description" content="A free tool to help you find a new hobby to engage in." />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:image" content={socialImageURL} />
		<meta property="og:locale" content="en_US" />

		<meta property="twitter:card" content="summary">
		<meta property="twitter:site" content="findyourselfahobby.com">
		<meta property="twitter:title" content="Find yourself a hobby!">
		<meta property="twitter:description" content="A free tool to help you find a new hobby to engage in.">
		<meta property="twitter:image:src" content={socialImageURL}>
		<meta property="twitter:domain" content={canonicalURL}>

    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kalam:wght@700&display=swap" rel="stylesheet">
    <title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global lang="scss">
  @import '../styles/mixins';

  html {
		font-family: system-ui, sans-serif;
    color: #ffe1d3;
    background: rgb(14, 14, 14);
    background: linear-gradient(90deg, rgba(14,14,14,1) 0%, rgb(89, 0, 20) 50%, rgba(14,14,14,1) 100%);
	}

  body {
    margin: 0;

    .modal__close button {
      padding: 0.5em;
      font-size: 1em;
    }

    .card {
      margin: auto;
      margin-bottom: 3em;
      
      .card__image img {
        height: auto;
      }
      .card__content {
        padding-top: 0;
        background-color: rgba(0,0,0,0.9);

        h3 {
          font-family: 'Kalam', cursive;
          font-size: 3rem;
          margin: 0.5em 0;
          line-height: 1em;
        }

        p {
          display: none;
        }
      }
    }
  }

  a {
    color: #d8d8d8;
    text-decoration: none;
  }

  a.button {
    display: inline-block;
    border: 2px solid #7b002a;
    background-color: #161616;
    color: #cccccc;
    border-radius: 1em;
    padding: 1em;
    box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    -webkit-box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    -moz-box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);

    &:hover {
      background-color: #2b2b2b;
      border-color: #a70038;
    }
  }

  main {
		margin: auto;
		padding: 3rem 3rem 5rem 3rem;
    text-align: center;

    @include screen-medium-and-smaller {
      padding: 2rem 1em 5rem 1em;
    }
	}

  .footer {
    display: flex;
    position: fixed;
    justify-content: space-around;
    background-color: #333;
    overflow: hidden;
    bottom: 0;
    width: calc(100% - 2em);
    padding: 1em;

    a {
      color: #e7e7e7;
      text-align: center;

      &:hover {
        color: #ffc8ed;
      }
    }

    @include screen-small {
      font-size: 0.8em;
    }
  }
</style>
